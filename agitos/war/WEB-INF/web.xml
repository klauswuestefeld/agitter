<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<!-- Servlets -->
	<servlet>
		<servlet-name>socialAuthServlet</servlet-name>
		<servlet-class>
			agitter.server.socialauth.SocialAuthServlet
			</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>socialAuthServlet</servlet-name>
		<url-pattern>/agitosweb/social_auth</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>remoteApplicationServlet</servlet-name>
		<servlet-class>
			agitter.server.servlet.RemoteApplicationServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>remoteApplicationServlet</servlet-name>
		<url-pattern>/agitosweb/rpc</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
